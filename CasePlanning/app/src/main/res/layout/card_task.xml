<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8CFFA091">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/relativeLayoutStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#85E8797D">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/periodDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Не выбрано"
                        android:textColor="@color/textWhite" />

                <TextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toEndOf="@+id/periodDay"
                        android:text="20.4.2020"
                        android:textColor="@color/textWhite" />

                <TextView
                        android:id="@+id/nameTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/periodDay"
                        android:layout_margin="5dp"
                        android:textColor="@color/textWhite"
                        android:textSize="17sp" />


                <TextView
                        android:id="@+id/replay_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:text="Не выбрано"
                        android:textColor="@color/textWhite" />
            </RelativeLayout>


        </com.google.android.material.appbar.MaterialToolbar>

        <RelativeLayout
                android:id="@+id/relativeLayoutTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/timer"
                    android:textSize="17sp" />

            <TextView
                    android:id="@+id/loadTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/timer"
                    android:text="Нет" />

            <TextView
                    android:id="@+id/startTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:text="@string/start"
                    android:textColor="#FF85C7"
                    android:textSize="17sp" />
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/commentLinearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/comment"
                    android:textSize="17sp" />

            <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="нет" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/imageViewPhoto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="gone" />

            <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/linerLayoutAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/startAndStopPlay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:visibility="gone"
                    android:contentDescription="@string/playAudio"
                    android:src="@drawable/ic_play_arrow_black_24dp" />

            <Chronometer
                    android:id="@+id/chronometerAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    android:text="00:00"
                    android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
                android:id="@+id/linearLayoutSubTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/subTask"
                    android:textSize="17sp" />


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewSubTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarTask"
                    style="@style/Toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </androidx.appcompat.widget.Toolbar>

            <com.miguelcatalan.materialsearchview.MaterialSearchView
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.shrikanthravi.collapsiblecalendarview.widget.CollapsibleCalendar
                    android:id="@+id/linearLayoutCalendar"
                    style="@style/Widget.CalendarView.Custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonLeft_drawableTintColor="@android:color/primary_text_light"
                    app:buttonRight_drawableTintColor="@android:color/widget_edittext_dark"
                    app:expandIconColor="@android:color/widget_edittext_dark"
                    app:layout_anchor="@+id/listViewTask"
                    app:layout_anchorGravity="bottom|center"
                    app:selectedItem_background="@drawable/circle_primary_color_solid_backround"
                    app:selectedItem_textColor="@color/textWhite"
                    app:textColor="@android:color/widget_edittext_dark"
                    app:todayItem_background="@drawable/circle_primary_color_stroke_background"
                    app:todayItem_textColor="@android:color/widget_edittext_dark" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listViewTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end|bottom">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:src="@drawable/ic_add"
                    app:backgroundTint="@color/azure" />

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="?attr/actionBarSize"
            app:headerLayout="@layout/header"
            app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
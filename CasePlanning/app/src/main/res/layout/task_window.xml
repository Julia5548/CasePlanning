<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarCreateTask"
            style="@style/Toolbar"
            android:layout_marginBottom="20dp" />

    <LinearLayout
            android:id="@+id/linearLayoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbarCreateTask"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/typeTask"
                android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linerLayoutTypeTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutText"
            android:orientation="horizontal">

        <ImageButton
                android:id = "@+id/photo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@null"
                android:contentDescription="@string/addphoto"
                android:src="@drawable/ic_add_a_photo_black_24dp" />

        <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@null"
                android:contentDescription="@string/addaudio"
                android:src="@drawable/ic_audiotrack_black_24dp" />

        <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@null"
                android:id = "@+id/video"
                android:contentDescription="@string/addvideo"
                android:src="@drawable/ic_videocam_black_24dp" />

        <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@null"
                android:contentDescription="@string/addtodolist"
                android:src="@drawable/ic_view_list_black_24dp" />

        <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@null"
                android:contentDescription="@string/addtext"
                android:src="@drawable/ic_text_fields_black_24dp" />
    </LinearLayout>

    <FrameLayout
            android:id="@+id/typeTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linerLayoutTypeTask"/>

    <LinearLayout
            android:id="@+id/linearLayoutColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typeTask"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/color"
                android:padding="5dp"
                android:textSize="20sp" />

        <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@null"
                android:contentDescription="@string/colorselection"
                android:src="@drawable/ic_color_lens_black_24dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/data"
                android:textSize="20sp" />

        <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@null"
                android:contentDescription="@string/colorselection"
                android:src="@drawable/ic_date_range_black_24dp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayoutPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutColor"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/periodDay"
                android:padding="5dp"
                android:textSize="20sp" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>



    <RelativeLayout
            android:id="@+id/linearLayoutReplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutPeriod"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/Replay"
                android:textSize="20sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:text="@string/chooseReplay"
                android:textSize="20sp" />
    </RelativeLayout>



</RelativeLayout>
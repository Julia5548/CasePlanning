<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/createTaskLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarCreateTask"
                    style="@style/Toolbar"
                    android:layout_marginBottom="20dp" />
            <RelativeLayout
                    android:id="@+id/addTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbarCreateTask">

                <EditText
                        android:id="@+id/editTextSubTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:hint="@string/Task"
                        android:layout_alignParentEnd="true" />

            </RelativeLayout>



            <LinearLayout
                    android:id="@+id/linearLayoutPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayoutColor"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="@string/periodDay"
                        android:textSize="20sp" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>



            <RelativeLayout
                    android:id="@+id/linearLayoutReplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addSubtask">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/Replay"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/textChoose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="5dp"
                        android:text="@string/chooseReplay"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textChoose"
                        android:padding="5dp"
                        android:text="@string/timer"
                        android:textSize="20sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textChoose"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="5dp"
                        android:text="@string/indicate"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timer"
                        android:padding="5dp"
                        android:text="@string/reminder"
                        android:textSize="20sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timer"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="5dp"
                        android:text="@string/set"
                        android:textSize="20sp" />
            </RelativeLayout>



        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addBtn">

            <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/addTask" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/text_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginStart="5dp"
                android:text="Всего выполнено задач:"
                android:textSize="18dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginStart="5dp"
                android:id="@+id/count_task"
                android:layout_toEndOf="@+id/text_task"
                android:text="5"
                android:textSize="18dp" />

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_week"
                app:cardCornerRadius="45dp"
                android:layout_below="@+id/text_task"
                android:layout_margin ="10dp"
                app:cardBackgroundColor="@android:color/white">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/text_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Прогресс выполнения за неделю:"
                        android:textSize="18dp" />

                <TextView
                        android:id="@+id/percent_progress_made"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0%"
                        android:typeface="monospace"
                        android:textSize="30sp"
                        android:textColor="#DA780DA5" />

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progress_made_week"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/text_progress"
                        android:layout_centerHorizontal="true"
                        app:cpb_background_progressbar_color="#8A148BDA"
                        app:cpb_background_progressbar_width="5dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#DA780DA5"
                        app:cpb_progressbar_width="5dp" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_week"
                app:cardCornerRadius="45dp"
                android:layout_margin ="10dp"
                app:cardBackgroundColor="@android:color/white">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/text_progress_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Прогресс выполнения за месяц:"
                        android:textSize="18dp" />

                <TextView
                        android:id="@+id/percent_progressMade_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0%"
                        android:typeface="monospace"
                        android:textSize="30sp"
                        android:textColor="#DA780DA5" />

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progress_made_month"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/text_progress_month"
                        android:layout_centerHorizontal="true"
                        app:cpb_background_progressbar_color="#A1EF550D"
                        app:cpb_background_progressbar_width="5dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#D339E87F"
                        app:cpb_progressbar_width="5dp" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="?attr/actionBarSize"
            app:headerLayout="@layout/header"
            app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/periodDay"
            android:id ="@+id/periodDay"
            android:textAlignment="center"
            android:textSize="20sp" />

        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/radioGroup"
                android:layout_below="@+id/periodDay"
                android:orientation="horizontal">

            <RadioButton
                    android:id="@+id/radio_morning"
                    android:layout_width="wrap_content"
                    android:text="Утро"
                    android:layout_height="wrap_content" />

            <RadioButton
                    android:id="@+id/radio_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="День"/>

            <RadioButton
                    android:id="@+id/radio_evening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вечер" />

            <RadioButton
                    android:id="@+id/radio_onceAnytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Один раз в любое время" />

        </RadioGroup>

</RelativeLayout>